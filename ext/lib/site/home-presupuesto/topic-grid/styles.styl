@import '../topic-card/styles'
.topics-grid

  .topics-section
    padding: 50px 0 45px
    &:nth-child(even)
      background-color: #EBEBEB
      
    &.distrito
      background-color: #E7EBEE

    .topics-section-title
      margin-top: 0
      font-size: 24px
      font-weight: 400
      color: #F59231
    
    .topics-section-title-area
      color: #00b1F0
    
    .topics-section-title-joven
      color: #FF3366

  .topics-section-container
    margin-left: auto
    margin-right: auto
    padding-left: 15px
    padding-right: 15px

    for i in (2..8)
      width = (i * 290px)
      @media (min-width: width)
        max-width: width

  .grid-bottom
    width: 100%
    display: flex
    justify-content: center
    align-items: center
    padding: 30px 0
    button
      cursor: pointer
      margin: 6px
      width: 180px
      border-radius: 5px
      padding: 0.8rem
      background-color: #1daeec
      color: #fff
      border: none
      font-size: 20px
      text-transform: uppercase