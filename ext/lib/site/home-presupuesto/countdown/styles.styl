.countdown-wrapper
  box-sizing: border-box
  width: 100vw
  padding: 50px 0
  display: flex
  flex-direction: column
  align-items: center
  justify-content: space-between
  font-family: 'Roboto', 'Helvetica Neue', Helvetica, Arial, sans-serif
  color: #fff
  background: rgba(0,172,236,0.7)
  
  .intro
    display: flex
    align-items: center
    max-width: 70%
    
    .circle
      flex: none
      display: inline-block
      height: 175px
      width: 175px
      margin-right: 30px
      background-color: #ebebeb
      border-radius: 50%
    .text
      flex: auto
      h2
        margin: 0 0 20px 0
        font-size: 2.7em
        font-weight: 500
      p
        margin: 0
        font-size: 1.6em
        font-weight: 500
        line-height: 1.3
        
  .countdown
    margin-top: 35px
    border: 1px solid #fff
    display: flex
    .clock
      width: 25%
      margin: 15px 0
      padding: 9 25px
      display: flex
      flex-direction: column
      align-items: center
      .number
        font-size: 5.5em
        font-weight: 400
        line-height: 1
      .caption
        font-size: 1.7em
        font-weight: 400
    .clock + .clock
      border-left: 1px solid #fff

  footer
    margin-top: 10px
    font-size: 24px
    font-weight: 400