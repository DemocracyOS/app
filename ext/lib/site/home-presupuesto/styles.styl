.ext-home-presupuesto
  @import './topic-card/styles'

  .loader
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
    z-index: 10
    background-color: rgba(#fff, .8)

  .topics-container
    position: relative
    display flex
    flex-wrap wrap
    justify-content center
    margin-bottom: 60px

  .filters-wrapper
    margin-top: 2em

    //label
      //margin: 0 0 20px
      //font-size: 20px

  .distrito-filter
    .btn
      margin: 0 6px 12px
      width: 158px
      border-radius: 5px
      color: #4f5353
      border-color: #4f5353
      font-weight: 500
      box-shadow: none

      &:hover,
      &:focus,
      &:active,
      &.active
        outline: 0
        border-color: #00adef
        color: #00adef
        background-color: transparent

      &.active
        color: #fff
        background-color: #00adef
  
  // NAVBAR FILTROS
    
  .filters-nav
    .btn
      margin: 0
      width: 170px
      border-radius: 5px
      color: #4f5353
      border-color: #4f5353
      font-weight: 500
      box-shadow: none

      &:hover,
      &:focus,
      &:active,
      &.active
        outline: 0
        border-color: #00adef
        color: #00adef
        background-color: transparent

      &.active
        color: #fff
        background-color: #00adef
      
      span
        padding-left: 8px
        
    .btn + .btn
        margin-left: 35px
    
    .filter-dropdown
      //position: absolute
      width: 300px
      margin-top: 15px
      padding: 15px
      border: 1px solid #4f5353
      border-radius: 5px
      color: #4f5353
      font-weight: 500
      box-shadow: 2px 2px 2px rgba(0,0,0,.3)
      .filter-options
        label
          display: block
          font-size: 1rem
          margin: 10px 0
          input
            margin-right: 10px
      .dropdown-actions
        margin-top: 20px
        display: flex
        justify-content: space-between
        a
          text-decoration: none
          font-weight: normal
          font-size: 0.8rem
          font-family: 'Roboto', -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Arial, sans-serif;
          color: #4f5353
        a:last-child
          color: #f59231
          text-decoration: underline

  .topics-section
    padding: 2em 0

    &.distrito
      background-color: #E7EBEE

  .topics-section-title
    margin-top: 0
    font-size: 24px
    font-weight: 400
    color: #4F5353

  .topics-section-container
    margin-left: auto
    margin-right: auto
    padding-left: 15px
    padding-right: 15px

    for i in (2..8)
      width = (i * 290px)
      @media (min-width: width)
        max-width: width

  .find-district-link
    font-weight: 400
    color: #fff

    &:hover span
      text-decoration: underline

    i
      margin-right: 3px
