.ext-home-presupuesto
  @import './topic-grid/styles'
  .loader
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
    z-index: 10
    background-color: rgba(#fff, .8)

  .topics-container
    position: relative
    display flex
    flex-wrap wrap
    justify-content center
    margin-bottom: 60px

  .distrito-filter-wrapper
    text-align: center
    margin-top: 2em

    label
      margin: 0 0 20px
      font-size: 20px

  .distrito-filter
    .btn
      margin: 0 6px 12px
      width: 158px
      border-radius: 5px
      color: #4f5353
      border-color: #4f5353
      font-weight: 500
      box-shadow: none

      &:hover,
      &:focus,
      &:active,
      &.active
        outline: 0
        border-color: #00adef
        color: #00adef
        background-color: transparent

      &.active
        color: #fff
        background-color: #00adef
        
  .find-district-link
    font-weight: 400
    color: #fff

    &:hover span
      text-decoration: underline

    i
      margin-right: 3px
