.form-group-documento
	display: flex
	flex-direction: row
	flex-wrap: wrap
	label
		width: 100%
	select
		width: 30%
	input
		width: 68%
		margin-left: 5px
		&[type="number"]
			-moz-appearance: textfield
			&::-webkit-outer-spin-button,
			&::-webkit-inner-spin-button
				-webkit-appearance: none
				margin: 0