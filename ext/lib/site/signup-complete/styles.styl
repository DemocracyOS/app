.ext-signup-complete
  // position: relative
  // margin: 0 auto
  // padding: 0
  // max-width: 360px

  .loader
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
    z-index: 10
    background-color: rgba(#fff, .3)


  input:disabled,
  select:disabled,
  textarea:disabled
    color: #aaa

  form
    margin-bottom: .5em

  .title
    margin-bottom: .4em
    margin-top: .2em

  input[type="radio"]
    margin-right: .5em

  .form-select-wrapper
    position: relative

    select
      cursor: pointer

    i
      pointer-events: none

      &::before
        position: absolute
        right: .8em
        top: 1.2em
        font-size: .8em

  .btn
    &[type="submit"]
      margin-top: .5em

    [class*="icon-"]
      font-size: .6em

  .complete-later
    text-align: right
    color: #f59231
