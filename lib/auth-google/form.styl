.auth-google-form-page
  header
    &.app-header
      .user-nav
        a[href="/signin"]
          display none
        a[href="/signup"]
          display none

.google-auth-form
  text-align center

  p
    margin-bottom 7px

  a
    display inline-block
    border-bottom-width 1px
    border-bottom-style solid
    border-bottom-color transparent
    font-weight normal
    font-size 12px
    line-height 1

    &:hover
      border-bottom-color #66adea
      text-decoration none

  .btn-google
    display inline-block
    position relative
    margin 20px 0 50px
    padding 8px 20px 8px 12px
    max-width 100%
    border none
    border-radius 4px
    font-weight 600
    color #fff
    white-space nowrap
    overflow hidden
    text-overflow ellipsis
    background #EF5350
    background -webkit-gradient(linear, left top, left bottom, from(#EF5350), to(#E54538))
    background -webkit-linear-gradient(top, #EF5350, #E54538)
    background -moz-linear-gradient(top, #EF5350, #E54538)
    background -ms-linear-gradient(top, #EF5350, #E54538)
    background -o-linear-gradient(top, #EF5350, #E54538)
    background linear-gradient(top, #EF5350, #E54538)

    &:hover
      opacity .9
      color #f7f7f7

    &:active
      opacity 1
      color #f7f7f7
      box-shadow inset 0 0 8px rgba(#082665, .6)

    .google-plus:before
      position relative
      top 4px
      margin-right 8px
      padding-right 7px
      border-right 1px solid rgba(#fff, .1)
      font-size 20px
      line-height 0
