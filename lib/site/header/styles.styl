nav.navbar
  padding-right: 15px
  padding-left: 15px
  .navbar-brand
    img
      height 30px
  .nav-link
    text-transform uppercase
    color inherit
    font-size 12px
    padding-top .7rem
    padding-bottom .7rem
    span.icon-bell
      font-size 16px
      font-weight bold
  #toggleButton
    display none
    float left
    background none
    border none
    color inherit
    padding .5rem 0
    margin-right 10px
    outline: none
    .icon-menu
      font-size 22px
    &:hover
      cursor: pointer
    &::before
      content: ""
      position: absolute
      top: 0
      left: 0
      width: 50px
      height: 100%

@media screen and (max-width: 700px)
  #toggleButton
    display block!important

@import './user-badge/styles'
