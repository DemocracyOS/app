.topic-comments-form
  display: flex
  flex-wrap: wrap
  margin-bottom: 30px
  padding: 15px
  box-shadow:
    0 1px 3px rgba(0,0,0,.12),
    0 1px 2px rgba(0,0,0,.24)
  background-color: #fff

  &.focused
    .name
      display: block

    .comments-create
      width: 100%
      margin-bottom: 1em

  .avatar
    margin-right: 10px
    width: 1.875em
    height: 1.875em

  .name
    display: none
    flex-grow: 2
    margin: 0 0 1em
    padding: .55em 0
    font-size: .8em
    font-weight: bold
    transition: all .3s

  .comments-create
    flex-grow: 2
    resize: none
    margin: 0
    padding: .2em 0
    border: 0
    line-height: 1.6
    font-size: .875em
    font-weight: inherit
    color: inherit
    outline: none
    box-shadow: none
    background-color: transparent
