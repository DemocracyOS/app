.comments-list-item
  margin-bottom: 15px
  padding: 15px 15px 5px
  box-shadow:
    0 1px 3px rgba(0,0,0,.12),
    0 1px 2px rgba(0,0,0,.24)
  background-color: #fff
  position: relative

  .comment-overlay
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
    display: flex
    align-items: center
    justify-content: center
    flex-direction: column
    background: rgba(255, 255, 255, 0.8)
    .btn:first-child
      margin-right: 10px

  .text
    margin-bottom: 15px
    font-size: .875em

    h1,
    h2,
    h3,
    h4,
    h5,
    h6,
    p
      margin: 0
      font-size: inherit
      line-height: 1.6

  &:hover
    .actions
      .reply
        i
          color: rgba(0,0,0,0.8)

  @import './header/styles'
  @import './footer/styles'
  @import './replies/styles'
